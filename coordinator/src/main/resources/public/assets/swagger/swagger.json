        "name": {
          "type": "string"
        },
        "query": {
          "type": "string"
        }
      },
      "example": {
        "id": "1",
        "name": "Q1",
        "ontology":"Knowledge",
        "query": "match (a:Entity)-[b:relatedEntity]-(c:Entity) return *"
