        },
        "name": {
          "type": "string"
        }
      },
      "example": {
        "id": "1",
        "name": "Q1",
        "query": {
          "ont": "Knowledge",
          "elements": [
            {
              "type": "Start",
              "eNum": 0,
              "next": 1
            },
            {
              "type": "EConcrete",
              "eNum": 1,
              "eTag": "A",
